<h1>New Tweet</h1>

<% if @tweet.errors.any? %>
  <div class="errors">
    Your tweet could not be saved:
    <ul>
      <% @tweet.errors.full_messages.each do |message| %>
        <li><%=message%></li>
      <% end %>
    </ul>
<% end %>

<%= form_for(@tweet, :url => tweets_path) do |f| %>

  <%= f.label :body %>
  <%= f.text_field :body %>

  <br/><br/>

  <%= f.submit %>

<% end %>